                            </children>
                        </Pane>
                    </content>
                </Tab>
                <Tab text="REVISAR">
                    <content>
                        <Pane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <ListView fx:id="LVDatos" layoutX="14.0" layoutY="85.0" prefHeight="273.0" prefWidth="570.0" />
                                <ChoiceBox fx:id="CBItem" layoutX="142.0" layoutY="33.0" prefWidth="150.0" />
                                <Label layoutX="20.0" layoutY="37.0" text="OBJETO A BUSCAR: " />
                                <Button layoutX="506.0" layoutY="33.0" mnemonicParsing="false" onAction="#showData" text="BUSCAR" />
                            </children>
                        </Pane>
                    </content>
                </Tab>
                <Tab text="MODIFICAR">
                    <content>
                        <Pane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</Pane>
